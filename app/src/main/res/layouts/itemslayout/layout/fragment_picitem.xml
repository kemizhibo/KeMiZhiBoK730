<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/res_300dp"
    android:background="#000000">

   <com.facebook.drawee.view.SimpleDraweeView
       android:id="@+id/simpledraweeview_pic"
       android:layout_centerHorizontal="true"
       android:layout_width="@dimen/res_400dp"
       android:layout_height="@dimen/res_200dp" />
   <TextView
       android:id="@+id/adj"
       android:layout_width="500dp"
       android:layout_height="wrap_content"
       android:layout_below="@+id/simpledraweeview_pic"
       android:layout_marginTop="@dimen/res_40dp"
       android:layout_toLeftOf="@+id/btn"
       android:paddingBottom="@dimen/dp_10"
       android:paddingLeft="@dimen/x10"
       android:text="kkkkkk"
       android:textColor="#ffffff" />

   <Button
       android:id="@+id/btn"
       android:layout_width="wrap_content"
       android:layout_height="40dp"
       android:layout_alignParentRight="true"
       android:layout_below="@+id/simpledraweeview_pic"
       android:layout_marginRight="@dimen/dp_10"
       android:layout_marginTop="@dimen/dp_10"
       android:background="@drawable/btn_border"
       android:text="选用素材" />
</RelativeLayout>
