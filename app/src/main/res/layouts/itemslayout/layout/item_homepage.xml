<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="@dimen/res_320dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/res_4dp"
        android:layout_marginRight="@dimen/res_4dp"
        >
        <com.kemizhibo.kemizhibo.yhr.widgets.UpRoundImageView
            android:id="@+id/homepage_iv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/res_165dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            />
        <TextView
            android:id="@+id/homepage_tv"
            android:layout_marginTop="@dimen/res_10dp"
            android:paddingLeft="@dimen/res_5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/black_6d6d6d"
            />
    </LinearLayout>