<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#f0f0f0">

    <RelativeLayout
        android:id="@+id/piconline"
        android:layout_width="40dp"
        android:layout_height="40dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/online" />
    </RelativeLayout>


    <TextView
        android:id="@+id/makeadj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/piconline"
        android:text="这是文件名称（在线制作）"
        android:textColor="#000000"/>

    <RelativeLayout
        android:id="@+id/picxiugai"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:visibility="gone"
        android:layout_toLeftOf="@+id/mcheckonline">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/xiugai" />
    </RelativeLayout>


    <TextView
        android:id="@+id/mcheckonline"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/logocheck"
        android:text="修改"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/logocheck"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toLeftOf="@+id/mcheckppt">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:src="@drawable/chakan" />
    </RelativeLayout>

    <TextView
        android:id="@+id/mcheckppt"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/picdelete"
        android:text="查看" />

    <RelativeLayout
        android:id="@+id/picdelete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toLeftOf="@+id/mdeleteonline">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_centerInParent="true"
            android:src="@drawable/delete" />
    </RelativeLayout>

    <TextView
        android:id="@+id/mdeleteonline"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="20dp"
        android:text="删除" />
</RelativeLayout>
