<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingBottom="@dimen/res_33dp"
    >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/res_15dp"
        android:textSize="@dimen/res_textsize_14sp"
        android:textColor="@color/black_353535"
        />
    <include layout="@layout/green_tab_view"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/res_8dp"
        android:paddingRight="@dimen/res_8dp"
        android:orientation="horizontal"
        >

        <FrameLayout
            android:orientation="vertical"
            android:layout_width="@dimen/res_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/res_3dp"
            >
            <com.kemizhibo.kemizhibo.yhr.widgets.UpRoundImageView
                android:id="@+id/homepage_iv_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/res_165dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                />

            <LinearLayout
                android:background="@color/half_transparent_white"
                android:orientation="horizontal"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="@dimen/res_24dp">
                <TextView
                    android:paddingBottom="@dimen/res_2dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/homepage_tv_1"
                    android:paddingLeft="@dimen/res_5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/black_6d6d6d"
                    />

            </LinearLayout>
        </FrameLayout>
        <FrameLayout
            android:orientation="vertical"
            android:layout_width="@dimen/res_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/res_3dp"
            >
            <com.kemizhibo.kemizhibo.yhr.widgets.UpRoundImageView
                android:id="@+id/homepage_iv_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/res_165dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                />

            <LinearLayout
                android:background="@color/half_transparent_white"
                android:orientation="horizontal"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="@dimen/res_24dp">
                <TextView
                    android:paddingBottom="@dimen/res_2dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/homepage_tv_2"
                    android:paddingLeft="@dimen/res_5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/black_6d6d6d"
                    />

            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:orientation="vertical"
            android:layout_width="@dimen/res_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/res_3dp"
            >
            <com.kemizhibo.kemizhibo.yhr.widgets.UpRoundImageView
                android:id="@+id/homepage_iv_3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/res_165dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                />

            <LinearLayout
                android:background="@color/half_transparent_white"
                android:orientation="horizontal"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="@dimen/res_24dp">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/homepage_tv_3"
                    android:paddingLeft="@dimen/res_5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/black_6d6d6d"
                    android:paddingBottom="@dimen/res_21dp"
                    />

            </LinearLayout>
        </FrameLayout>
        <FrameLayout
            android:orientation="vertical"
            android:layout_width="@dimen/res_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/res_3dp"
            >
            <com.kemizhibo.kemizhibo.yhr.widgets.UpRoundImageView
                android:id="@+id/homepage_iv_4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/res_165dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                />

            <LinearLayout
                android:background="@color/half_transparent_white"
                android:orientation="horizontal"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="@dimen/res_24dp">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/homepage_tv_4"
                    android:paddingLeft="@dimen/res_5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/black_6d6d6d"
                    android:paddingBottom="@dimen/res_21dp"
                    />

            </LinearLayout>
        </FrameLayout>

    </LinearLayout>
</LinearLayout>