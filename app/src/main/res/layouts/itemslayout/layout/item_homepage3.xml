<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MWStyle"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingBottom="@dimen/res_33dp"
    >
    <TextView
        android:id="@+id/tv_title"
        style="@style/WWStyle"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/res_15dp"
        android:textSize="@dimen/res_textsize_14sp"
        android:textColor="@color/black_353535"
        />
    <include layout="@layout/green_tab_view"/>
    <LinearLayout
        style="@style/MWStyle"
        android:paddingLeft="@dimen/res_8dp"
        android:paddingRight="@dimen/res_8dp"
        android:orientation="horizontal"
        >
            <android.support.v7.widget.CardView
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp"
                style="@style/WeightStyle"
                android:layout_marginRight="@dimen/res_3dp"
                >
                <FrameLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/res_165dp"
                    >
                <ImageView
                    android:id="@+id/homepage_iv_1"
                    style="@style/MMStyle"
                    android:scaleType="centerCrop"/>

                <LinearLayout
                    android:background="@color/half_transparent_white"
                    android:orientation="horizontal"
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/res_24dp">
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/homepage_tv_1"
                        android:paddingLeft="@dimen/res_5dp"
                        android:layout_width="@dimen/res_0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        />
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/homepage_tv_time1"
                        android:paddingLeft="@dimen/res_5dp"
                        style="@style/WWStyle"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        />
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/homepage_iv_l1"
                        style="@style/WWStyle"
                        />

                </LinearLayout>
                </FrameLayout>
            </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp"
            style="@style/WeightStyle"
            android:layout_marginLeft="@dimen/res_3dp"
            android:layout_marginRight="@dimen/res_3dp"
            >
            <FrameLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/res_165dp"
                >
                <ImageView
                    android:id="@+id/homepage_iv_2"
                    style="@style/MMStyle"
                    android:scaleType="centerCrop"/>

                <LinearLayout
                    android:background="@color/half_transparent_white"
                    android:orientation="horizontal"
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/res_24dp">
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/homepage_tv_2"
                        android:paddingLeft="@dimen/res_5dp"
                       style="@style/WWStyle"
                        android:textSize="12sp"
                        android:textColor="@color/black_6d6d6d"
                        />

                </LinearLayout>
            </FrameLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView

            app:cardCornerRadius="4dp"
            app:cardElevation="2dp"
            style="@style/WeightStyle"
            android:layout_marginLeft="@dimen/res_3dp"
            >
            <FrameLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/res_165dp"
                >
                <ImageView
                    android:id="@+id/homepage_iv_3"
                    style="@style/MMStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>

                <LinearLayout
                    android:background="@color/half_transparent_white"
                    android:orientation="horizontal"
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/res_24dp">
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/homepage_tv_3"
                        android:paddingLeft="@dimen/res_5dp"
                       style="@style/WWStyle"
                        android:textSize="12sp"
                        android:textColor="@color/black_6d6d6d"
                        />

                </LinearLayout>
            </FrameLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</LinearLayout>