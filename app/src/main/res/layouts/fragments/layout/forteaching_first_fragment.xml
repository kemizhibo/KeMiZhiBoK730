<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/first_ll">
    <RelativeLayout
        android:id="@+id/forteaching_shaixuan_butn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/res_40dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/res_22.5dp"
            android:text="筛选"
            android:textColor="@color/text_7f7e7e"
            android:textSize="@dimen/res_textsize_12sp" />
        <ImageView
            android:id="@+id/forteaching_shaixuan_imageview"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/res_10dp"
            android:src="@mipmap/xiala_2" />
    </RelativeLayout>

    <com.liaoinstan.springview.widget.SpringView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spring_view">

        <GridView
            android:id="@+id/grid_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="2">

        </GridView>

    </com.liaoinstan.springview.widget.SpringView>

</LinearLayout>

