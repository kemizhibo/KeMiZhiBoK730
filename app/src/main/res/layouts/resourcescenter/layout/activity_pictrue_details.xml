<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kemizhibo.kemizhibo.yhr.activity.resourcescenteraactivity.PictrueDetailsActivity">
    <include layout="@layout/pubic_title_bar"/>
    <include layout="@layout/line"/>
    <FrameLayout
        android:layout_below="@+id/search_view_box"
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
    </FrameLayout>
    <LinearLayout
        android:id="@+id/linear_layout"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.youth.banner.Banner
            android:layout_gravity="center_horizontal"
            android:id="@+id/pictrue_details_viewpager"
            android:layout_marginTop="@dimen/res_20dp"
            android:layout_width="@dimen/res_530.0dp"
            android:layout_height="@dimen/res_565.5dp">
        </com.youth.banner.Banner>
        <LinearLayout
            android:layout_marginLeft="@dimen/res_34dp"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/res_28.5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/res_47dp">
            <TextView
                android:id="@+id/pictrue_details_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/res_textsize_17.5sp"
                android:textColor="@color/text_333333"
                android:text="仙人掌为什么会在沙漠里生存的很好"/>
            <ImageView
                android:id="@+id/pictrue_details_imageview"
                android:layout_marginRight="@dimen/res_5dp"
                android:src="@mipmap/dianzan_kong"
                android:layout_width="@dimen/res_17.5dp"
                android:layout_height="@dimen/res_16dp" />
            <TextView
                android:id="@+id/pictrue_details_collection"
                android:layout_marginRight="@dimen/res_34dp"
                android:textSize="@dimen/res_textsize_13sp"
                android:textColor="@color/text_67c58c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收藏"/>
        </LinearLayout>
        <TextView
            android:layout_marginLeft="@dimen/res_34dp"
            android:id="@+id/pictrue_details_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="图片的详情介绍"/>
    </LinearLayout>
</LinearLayout>
