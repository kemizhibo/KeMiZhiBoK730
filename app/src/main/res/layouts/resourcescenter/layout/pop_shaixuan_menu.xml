<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="@dimen/res_10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="@dimen/res_25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_999999"
                android:textSize="@dimen/text_size_12sp"
                android:text="教材:"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/yingxiang_shaixuan_jiaocai_recyclerview"
                android:layout_marginLeft="@dimen/res_25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/res_17.5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="@dimen/res_25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_999999"
                android:textSize="@dimen/text_size_12sp"
                android:text="年级:"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/yingxiang_shaixuan_nianji_recyclerview"
                android:layout_marginLeft="@dimen/res_25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/res_17.5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="@dimen/res_25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_999999"
                android:textSize="@dimen/text_size_12sp"
                android:text="学期:"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/yingxiang_shaixuan_xueqi_recyclerview"
                android:layout_marginLeft="@dimen/res_25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="@dimen/res_17.5dp"
            android:layout_marginTop="@dimen/res_17.5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="@dimen/res_25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_999999"
                android:textSize="@dimen/text_size_12sp"
                android:text="分类:"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/yingxiang_shaixuan_fenlei_recyclerview"
                android:layout_marginLeft="@dimen/res_25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    <TextView
        android:layout_marginTop="@dimen/res_20dp"
        android:id="@+id/select_butn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确定"/>

</LinearLayout>
