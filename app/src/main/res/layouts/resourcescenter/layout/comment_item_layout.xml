<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
        <LinearLayout
            android:layout_marginLeft="@dimen/res_12dp"
            android:layout_marginTop="@dimen/res_15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/comment_teacher_touxiang"
                android:layout_width="@dimen/res_57dp"
                android:layout_height="@dimen/res_57dp"
                android:scaleType="centerCrop"
                fresco:roundAsCircle="true"
                fresco:placeholderImage="@mipmap/ic_launcher"
                fresco:failureImage="@mipmap/ic_launcher"/>
            <LinearLayout
                android:layout_marginLeft="@dimen/res_16dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/comment_teacher_name"
                        android:layout_width="@dimen/res_0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size_12sp"
                        android:textColor="@color/text_353535"
                        android:text="评论中讲师的名字"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/comment_text"
                    android:layout_marginTop="@dimen/res_12.5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/res_textsize_11sp"
                    android:textColor="@color/text_8e8e8e"
                    android:text="这里应该是评论的内容"/>
                <!--<android.support.v7.widget.RecyclerView
                    android:id="@+id/replay_comment_recyclerview"
                    android:background="@color/dcdcdc"
                    android:layout_marginTop="@dimen/res_15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </android.support.v7.widget.RecyclerView>-->
            </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="@dimen/res_85dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/res_29dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/comment_time_txt"
            android:layout_width="@dimen/res_0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/res_5dp"
            android:layout_weight="1"
            android:text="发表评论的时间"
            android:textColor="@color/text_a6a4a4"
            android:textSize="@dimen/res_textsize_10sp" />
        <RelativeLayout
            android:id="@+id/comment_dianzan_layout"
            android:layout_marginRight="@dimen/res_31.5dp"
            android:layout_width="@dimen/res_50dp"
            android:layout_height="@dimen/res_20dp">
            <ImageView
                android:id="@+id/comment_dianzan"
                android:layout_width="@dimen/res_14dp"
                android:layout_height="@dimen/res_14dp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
