<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_above="@+id/pinglun_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <cn.jzvd.JZVideoPlayerStandard
            android:layout_alignParentTop="true"
            android:id="@+id/yingxiang_details_video"
            android:layout_width="match_parent"
            android:layout_height="@dimen/res_375dp" >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </cn.jzvd.JZVideoPlayerStandard>
        <android.support.design.widget.CoordinatorLayout
            android:layout_below="@+id/yingxiang_details_video"
            app:titleEnabled="false"
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

                <android.support.design.widget.CollapsingToolbarLayout
                    android:id="@+id/collapsing_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed"
                    app:expandedTitleGravity="right|bottom"
                    app:expandedTitleTextAppearance="@style/OpenVideoTitle"
                    app:collapsedTitleTextAppearance="@style/ZheDieVideoTitle">
                    <!--app:expandedTitleMarginStart="@dimen/res_textsize_15sp"
                    app:expandedTitleMarginEnd="@dimen/res_textsize_30sp"-->

                </android.support.design.widget.CollapsingToolbarLayout>

            </android.support.design.widget.AppBarLayout>

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/detail_page_above_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_marginTop="@dimen/res_12dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_marginLeft="@dimen/res_12dp"
                                android:id="@+id/yingxiang_details_video_title"
                                android:textSize="@dimen/res_textsize_13sp"
                                android:textColor="@color/text_2a2a2a"
                                android:layout_width="@dimen/res_0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="视频的大标题"/>
                            <ImageView
                                android:id="@+id/yingxiang_details_shoucang_imageview"
                                android:layout_marginRight="@dimen/res_12dp"
                                android:layout_width="@dimen/res_13dp"
                                android:layout_height="@dimen/res_13dp"
                                android:src="@mipmap/shoucang_2"/>
                            <TextView
                                android:id="@+id/yingxiang_details_shoucang_butn"
                                android:layout_marginRight="@dimen/res_12dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/res_textsize_10sp"
                                android:textColor="@color/text_b4b4b4"
                                android:text="收藏"/>
                        </LinearLayout>

                        <View
                            android:layout_marginTop="@dimen/res_12.5dp"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/res_1dp"
                            android:background="@color/dcdcdc"/>
                        <TextView
                            android:layout_marginTop="@dimen/res_15dp"
                            android:layout_marginLeft="@dimen/res_12dp"
                            android:textSize="@dimen/res_textsize_12sp"
                            android:textColor="@color/black_353535"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="讲师介绍-"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="10dp"
                            android:gravity="center_vertical">
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/yingxiang_details_teacher_touxiang"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_launcher"
                                android:layout_marginLeft="@dimen/res_12dp"
                                app:civ_border_width="1dp"
                                app:civ_border_color="@android:color/white"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginLeft="@dimen/res_16dp"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:id="@+id/yingxiang_details_teacher_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/black_353535"
                                        android:textSize="@dimen/res_textsize_12sp"
                                        android:text="讲师的名字" />
                                    <TextView
                                        android:id="@+id/yingxiang_details_teacher_type"
                                        android:layout_marginLeft="@dimen/res_21dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/text_d1d1d1"
                                        android:textSize="@dimen/res_textsize_11sp"
                                        android:text="(是个什么学家)" />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/detail_page_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1小时前"
                                    android:textSize="12sp"
                                    android:layout_marginTop="3dp"
                                    android:textColor="#989898"/>
                                <TextView
                                    android:id="@+id/yingxiang_details_teacher_jieshao"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="这里应该是对讲师的介绍"
                                    android:textSize="12sp"
                                    android:layout_marginTop="@dimen/res_12.5dp"
                                    android:textColor="#989898"/>
                            </LinearLayout>
                            <ImageView
                                android:layout_width="@dimen/res_10dp"
                                android:layout_height="@dimen/res_9.5dp"
                                android:src="@mipmap/pinglun_2"/>
                            <ImageView
                                android:id="@+id/detail_page_focus"
                                android:layout_width="@dimen/res_8.5dp"
                                android:layout_height="@dimen/res_8.5dp"
                                android:src="@mipmap/dianzan_2"
                                android:layout_margin="12dp"
                                android:padding="6dp"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/detail_page_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="视频介绍-"
                            android:layout_marginLeft="@dimen/res_12dp"
                            android:layout_marginTop="@dimen/res_15dp"
                            android:layout_marginBottom="@dimen/res_12.5dp"
                            android:textSize="@dimen/res_textsize_12sp"
                            android:textColor="@color/black_353535"/>
                        <TextView
                            android:id="@+id/yingxiang_details_video_jieshao"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/res_11dp"
                            android:text="水光潋滟晴方好，山色空蒙雨亦奇。\n欲把西湖比西子，淡抹浓妆总相宜。"
                            android:maxLines="10"
                            android:ellipsize="end"
                            android:layout_marginRight="10dp"
                            android:textSize="14sp"
                            android:textColor="@color/text_8e8e8e"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="@dimen/res_15dp"
                            android:background="#e6e6e6"/>
                        <TextView
                            android:id="@+id/yingxiang_details_comment_num_txt"
                            android:layout_marginLeft="@dimen/res_12dp"
                            android:layout_marginTop="@dimen/res_15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="评论数"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/detail_page_comment_container"
                        android:layout_below="@+id/detail_page_above_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/comment_recyclerview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </android.support.v7.widget.RecyclerView>

                    </LinearLayout>
                </RelativeLayout>
            </android.support.v4.widget.NestedScrollView>
        </android.support.design.widget.CoordinatorLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/pinglun_layout"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:elevation="2dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/detail_page_do_comment"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:textColor="#B6B6B6"
            android:textSize="12sp"
            android:text="说点什么吧..."
            android:background="#dcdcdc"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="22dp"
            android:gravity="center_vertical"
            android:paddingLeft="18dp"/>
    </RelativeLayout>


</RelativeLayout>
