<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/x10"
    android:paddingBottom="@dimen/x10"
    android:paddingLeft="@dimen/x15"
    android:paddingRight="@dimen/x15">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/res_117.5dp"
        android:background="@drawable/bg_preparing_teaching_lessons_list_item">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/logo"
            android:layout_width="@dimen/res_175dp"
            android:layout_height="@dimen/res_109dp"
            android:layout_marginLeft="@dimen/x5"
            android:layout_marginTop="@dimen/x6"
            fresco:roundedCornerRadius="@dimen/x10"
            fresco:placeholderImage="@mipmap/ic_launcher"
            fresco:failureImage="@mipmap/ic_launcher"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/logo"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/x15">

            <TextView
                android:id="@+id/desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"/>

            <TextView
                android:id="@+id/name"
                android:layout_marginTop="@dimen/x15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"/>

            <LinearLayout
                android:layout_marginTop="@dimen/x15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/status_img"
                    android:layout_width="@dimen/x15"
                    android:layout_height="@dimen/x15"
                    android:src="@mipmap/ic_launcher"
                    android:scaleType="fitXY"/>

                <TextView
                    android:id="@+id/status_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x5"
                    android:layout_marginRight="@dimen/x8"/>

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x10"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/doc_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"/>

            <ImageView
                android:layout_marginLeft="@dimen/x10"
                android:src="@drawable/right_img"
                android:layout_width="@dimen/x15"
                android:layout_height="@dimen/x15"
                android:scaleType="fitXY"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
