<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kemizhibo.kemizhibo.other.preparing_package_detail.PreparingPackageDetailActivity">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x120">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="备课包"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/back_img"
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:src="@drawable/back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x20"/>

    </RelativeLayout>

    <ScrollView
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:background="#f086"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/res_30dp"
                    android:layout_marginLeft="@dimen/x20"
                    android:gravity="center_vertical"
                    android:text="一键授课" />
            </LinearLayout>


            <com.kemizhibo.kemizhibo.other.preparing_package_detail.view.MyListView
                android:id="@+id/list_view_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null" />
            <LinearLayout
                android:background="#f089"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/res_30dp"
                    android:layout_marginLeft="@dimen/x20"
                    android:gravity="center_vertical"
                    android:text="教学素材" />
            </LinearLayout>


            <com.kemizhibo.kemizhibo.other.preparing_package_detail.view.MyListView
                android:id="@+id/list_view_su"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null"></com.kemizhibo.kemizhibo.other.preparing_package_detail.view.MyListView>
            <LinearLayout
                android:background="#f05"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/res_30dp"
                    android:layout_marginLeft="@dimen/x20"
                    android:gravity="center_vertical"
                    android:text="我的授课方案" />
            </LinearLayout>

            <com.kemizhibo.kemizhibo.other.preparing_package_detail.view.MyListView
                android:id="@+id/list_view_shou"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null" />
            <LinearLayout
                android:background="#f91"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/res_30dp"
                    android:layout_marginLeft="@dimen/x20"
                    android:gravity="center_vertical"
                    android:text="其他" />
            </LinearLayout>
            <TextView
                android:id="@+id/none"
                android:layout_width="match_parent"
                android:layout_height="@dimen/res_30dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/x10"
                android:text="暂无更多" />

            <com.kemizhibo.kemizhibo.other.preparing_package_detail.view.MyListView
                android:id="@+id/list_view_qi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/res_35dp"
        android:layout_height="@dimen/res_35dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x30"
       android:layout_marginBottom="@dimen/res_200dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/xiugai"
        app:civ_border_color="#f060"
        app:civ_border_width="2dp" />
</RelativeLayout>
