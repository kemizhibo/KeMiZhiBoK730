<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/pop_filter_ll"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x196"
    android:background="@drawable/filter_pop_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x2"
        android:layout_marginLeft="@dimen/x50"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="教材 :"
            android:textColor="#999999"
            android:textSize="12sp"/>

        <com.kemizhibo.kemizhibo.other.custom.CustomIndicator
            android:id="@+id/material_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.kemizhibo.kemizhibo.other.custom.CustomIndicator>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x35"
        android:layout_marginLeft="@dimen/x50"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="年级 :"
            android:textColor="#999999"
            android:textSize="12sp"/>

        <com.kemizhibo.kemizhibo.other.custom.CustomIndicator
            android:id="@+id/grade_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.kemizhibo.kemizhibo.other.custom.CustomIndicator>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x35"
        android:layout_marginLeft="@dimen/x50"
        android:layout_marginBottom="@dimen/x50"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学期 :"
            android:textColor="#999999"
            android:textSize="12sp"/>

        <com.kemizhibo.kemizhibo.other.custom.CustomIndicator
            android:id="@+id/semester_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.kemizhibo.kemizhibo.other.custom.CustomIndicator>

    </LinearLayout>

</LinearLayout>
