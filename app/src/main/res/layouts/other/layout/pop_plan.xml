<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x733"
    android:layout_height="@dimen/x400"
    android:orientation="vertical"
    android:padding="@dimen/x20"
    android:background="@drawable/bg_plan_pop">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x100">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择您的授课方案"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x200">

        <ListView
            android:id="@+id/plan_list"
            android:layout_width="@dimen/x570"
            android:layout_height="match_parent">

        </ListView>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/text_eeeeee"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x99"
        android:id="@+id/go_teach_rl">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="去授课"
            android:textColor="@color/text_67c58c"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

</LinearLayout>
