<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kemizhibo.kemizhibo.yhr.activity.personcenters.PersonCenterShouCangActivity">
    <include layout="@layout/pubic_title_bar"/>
    <include layout="@layout/line"/>
    <com.liaoinstan.springview.widget.SpringView
        android:layout_gravity="center_horizontal"
        android:id="@+id/liulan_springview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/liulan_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
    </com.liaoinstan.springview.widget.SpringView>
    <FrameLayout
        android:id="@+id/frame_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/res_50dp">
            <Button
                android:id="@+id/select_all_butn"
                android:background="@color/text_67c58c"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="@dimen/res_textsize_15sp"
                android:text="全选"/>
            <Button
                android:id="@+id/delete_butn"
                android:background="@color/white"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/text_bbbbbb"
                android:textSize="@dimen/res_textsize_15sp"
                android:text="删除"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
