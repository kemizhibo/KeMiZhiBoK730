<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kemizhibo.kemizhibo.yhr.activity.personcenters.PersonCenterSheZhiActivity">
    <include layout="@layout/pubic_title_bar"/>
    <include layout="@layout/line"/>
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/res_65dp">
        <TextView
            android:layout_marginLeft="@dimen/res_15dp"
            android:textSize="@dimen/res_textsize_17sp"
            android:textColor="@color/black_666666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="旧密码"/>
        <EditText
            android:id="@+id/old_pwd_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:theme="@style/MyEditText"
            android:inputType="textPassword"
            android:layout_marginLeft="@dimen/res_24dp"
            android:hint="请输入旧密码" />
    </LinearLayout>
    <include layout="@layout/line"/>
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/res_65dp">
        <TextView
            android:layout_marginLeft="@dimen/res_15dp"
            android:textSize="@dimen/res_textsize_17sp"
            android:textColor="@color/black_666666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新密码"/>
        <EditText
            android:id="@+id/new_pwd_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:theme="@style/MyEditText"
            android:inputType="textPassword"
            android:layout_marginLeft="@dimen/res_24dp"
            android:hint="请输入新密码" />
    </LinearLayout>
    <include layout="@layout/line"/>
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/res_65dp">
        <TextView
            android:layout_marginLeft="@dimen/res_15dp"
            android:textSize="@dimen/res_textsize_17sp"
            android:textColor="@color/black_666666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新密码"/>
        <EditText
            android:id="@+id/new_pwd_edittext_agin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:theme="@style/MyEditText"
            android:inputType="textPassword"
            android:layout_marginLeft="@dimen/res_24dp"
            android:hint="请再次输入新密码" />
    </LinearLayout>
    <include layout="@layout/line"/>
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/res_65dp">
        <TextView
            android:layout_marginLeft="@dimen/res_15dp"
            android:textSize="@dimen/res_textsize_14sp"
            android:textColor="@color/text_999999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码6-20位且由字母和数字组成"/>
    </LinearLayout>
    <include layout="@layout/line"/>
    <Button
        android:id="@+id/finish_butn"
        android:layout_marginTop="@dimen/res_60dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/res_375dp"
        android:layout_height="@dimen/res_55dp"
        android:background="@mipmap/login_butn"
        android:textColor="@color/white"
        android:textSize="@dimen/res_textsize_19sp"
        android:text="完成"/>
</LinearLayout>
