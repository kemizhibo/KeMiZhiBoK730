<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginLeft="@dimen/res_12dp"
    android:gravity="center_vertical"
    app:cardElevation="20dp"
    app:cardCornerRadius="10dp"
    android:layout_width="@dimen/res_576.0dp"
    android:layout_height="@dimen/res_117.5dp">

    <ImageView
        android:id="@+id/item_liulan_photo"
        android:layout_width="@dimen/res_175dp"
        android:layout_height="@dimen/res_105dp"
        android:layout_marginLeft="@dimen/res_5dp"
        android:src="@mipmap/milier"/>
    <LinearLayout
        android:layout_marginLeft="@dimen/res_10dp"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_liulan_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/res_textsize_14sp"
            android:textColor="@color/text_333333"
            android:text="标题"/>
        <TextView
            android:id="@+id/item_liulan_state"
            android:layout_marginTop="@dimen/res_10dp"
            android:textSize="@dimen/res_textsize_12sp"
            android:textColor="@color/black_666666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="状态"/>
        <TextView
            android:id="@+id/item_liulan_time"
            android:layout_marginTop="@dimen/res_13dp"
            android:textSize="@dimen/res_textsize_12sp"
            android:textColor="@color/text_999999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间"/>
    </LinearLayout>
    <Button
        android:id="@+id/item_liulan_butn"
        android:layout_marginRight="@dimen/res_23dp"
        android:layout_width="@dimen/res_90dp"
        android:layout_height="@dimen/res_28dp"
        android:background="@mipmap/login_butn"
        android:textColor="@color/white"
        android:textSize="@dimen/res_12dp"
        android:text="查看"/>

</LinearLayout>
