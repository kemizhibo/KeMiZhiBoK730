<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:elevation="@dimen/res_3dp"
    android:background="@drawable/layout_yuanjiao"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/res_6dp"
    android:layout_marginBottom="@dimen/res_6dp"
    android:layout_marginLeft="@dimen/res_12dp"
    android:gravity="center_vertical"
    android:layout_width="@dimen/res_576.0dp"
    android:layout_height="@dimen/res_117.5dp">
    <ImageView
        android:id="@+id/check_box"
        android:src="@drawable/checkbox_null"
        android:layout_width="@dimen/res_17.5dp"
        android:layout_height="@dimen/res_17.5dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="12dp"
        android:gravity="center"
        android:visibility="gone"/>
    <RelativeLayout
        android:layout_width="@dimen/res_175dp"
        android:layout_height="@dimen/res_105dp">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/item_liulan_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/res_5dp"
            fresco:roundedCornerRadius="@dimen/x10"
            fresco:placeholderImage="@mipmap/milier"
            fresco:failureImage="@mipmap/milier"/>
        <ImageView
            android:id="@+id/collection_box_tuji"
            android:layout_width="@dimen/res_18dp"
            android:layout_height="@dimen/res_15dp"
            android:layout_marginRight="@dimen/res_5dp"
            android:layout_marginBottom="@dimen/res_5dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/tuji"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_marginLeft="@dimen/res_10dp"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_liulan_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/res_textsize_14sp"
            android:textColor="@color/text_333333"
            android:text=""/>
        <TextView
            android:id="@+id/item_liulan_state"
            android:layout_marginTop="@dimen/res_10dp"
            android:textSize="@dimen/res_textsize_12sp"
            android:textColor="@color/black_666666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>
        <TextView
            android:id="@+id/item_liulan_time"
            android:layout_marginTop="@dimen/res_13dp"
            android:textSize="@dimen/res_textsize_12sp"
            android:textColor="@color/text_999999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>
    </LinearLayout>
    <Button
        android:id="@+id/item_liulan_butn"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:layout_marginRight="@dimen/res_23dp"
        android:layout_width="@dimen/res_90dp"
        android:layout_height="@dimen/res_28dp"
        android:textSize="@dimen/res_12dp" />
</LinearLayout>
