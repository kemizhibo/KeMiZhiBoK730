<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_width="@dimen/res_287.5dp"
        android:layout_height="@dimen/res_160dp">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/collection_box_recyclerview_imageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/res_5dp"
            fresco:roundedCornerRadius="@dimen/x10"
            fresco:placeholderImage="@mipmap/milier"
            fresco:failureImage="@mipmap/milier"/>
        <ImageView
            android:id="@+id/collection_box_play_butn"
            android:layout_centerInParent="true"
            android:layout_width="@dimen/res_18dp"
            android:layout_height="@dimen/res_18dp"
            android:visibility="gone"
            android:src="@mipmap/play_butn"/>
        <ImageView
            android:id="@+id/collection_box_tuji"
            android:layout_width="@dimen/res_18dp"
            android:layout_height="@dimen/res_15dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:src="@mipmap/tuji"/>
    </RelativeLayout>


    <ImageView
        android:id="@+id/check_box"
        android:layout_width="@dimen/res_17.5dp"
        android:layout_height="@dimen/res_17.5dp"
        android:layout_alignEnd="@+id/relativelayout"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/checkbox_null"
        android:visibility="gone"/>



    <TextView
        android:id="@+id/collection_box_item_title"
        android:layout_below="@+id/relativelayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/res_15dp"
        android:layout_marginTop="@dimen/res_15dp"
        android:layout_marginBottom="@dimen/res_25dp"
        android:text="精彩内容正在加载中"
        android:textColor="@color/black"
        android:textSize="@dimen/res_textsize_15sp" />

</RelativeLayout>
