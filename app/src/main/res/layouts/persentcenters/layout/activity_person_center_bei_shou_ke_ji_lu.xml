<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kemizhibo.kemizhibo.other.preparing_teaching_lessons.PersonCenterBeiShouKeJiLuActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x100"
        android:layout_marginTop="@dimen/x30"
        android:background="@color/white">

        <ImageView
            android:id="@+id/back_img"
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/x30"
            android:src="@drawable/back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x20"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备授课记录"
            android:textSize="14sp"
            android:layout_centerInParent="true" />

        <LinearLayout
            android:id="@+id/filter_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x10"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x30"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/filter_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="筛选"/>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/res_1dp"
        android:background="#dcdcdc" />

    <com.androidkun.xtablayout.XTabLayout
        android:background="@color/fafafa"
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/res_47.5dp"
        app:tabIndicatorHeight="@dimen/res_2.5dp"
        app:xTabIndicatorWidth="@dimen/res_20dp"
        app:xTabIndicatorHeight="@dimen/res_3dp"
        app:xTabIndicatorColor="@color/green_tab"
        app:xTabSelectedTextColor="@color/lvse_tab"
        app:xTabTextColor="@color/text_333333"
        app:xTabTextSize="@dimen/res_textsize_15sp"
        app:xTabSelectedTextSize="@dimen/res_textsize_15sp"
        app:xTabDisplayNum="2"
        app:xTabDividerColor="@color/text_333333"
        app:xTabTextSelectedBold="true">
    </com.androidkun.xtablayout.XTabLayout>

    <android.support.v4.view.ViewPager
        android:background="@color/white"
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>

</LinearLayout>
