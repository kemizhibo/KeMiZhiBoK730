<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kemizhibo.kemizhibo.other.preparing_teaching_lessons.PersonCenterBeiShouKeJiLuActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x120"
        android:background="#33CC99">

        <ImageView
            android:id="@+id/back_img"
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/x30"
            android:src="@drawable/back"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="@dimen/x75"/>

        <LinearLayout
            android:layout_width="@dimen/x360"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/x70">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_centerHorizontal="true">

                    <TextView
                        android:id="@+id/preparing_lessons_text"
                        android:layout_width="@dimen/x120"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:text="备课记录"/>

                    <TextView
                        android:id="@+id/preparing_lessons_line"
                        android:layout_width="@dimen/x100"
                        android:layout_height="@dimen/x4"
                        android:background="@color/white"/>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_centerHorizontal="true">

                    <TextView
                        android:id="@+id/teaching_lessons_text"
                        android:layout_width="@dimen/x120"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="授课记录"/>

                    <TextView
                        android:id="@+id/teaching_lessons_line"
                        android:layout_width="@dimen/x100"
                        android:layout_height="@dimen/x4"
                        android:background="@color/white"/>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/filter_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/x75">

            <ImageView
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x30"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/filter_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="筛选"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
