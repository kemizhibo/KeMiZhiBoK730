<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kemizhibo.kemizhibo.yhr.activity.personcenters.PersonCenterSheZhiActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/xiugai_back"
            android:layout_margin="@dimen/res_12dp"
            android:src="@mipmap/fanhui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="找回密码"
            android:textColor="#7f7e7e"
            android:textSize="@dimen/res_textsize_18sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="#dcdcdc"
        android:layout_width="match_parent"
        android:layout_height="@dimen/res_1dp" />
</LinearLayout>
