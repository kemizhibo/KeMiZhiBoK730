<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kemizhibo.kemizhibo.yhr.activity.personcenters.LectureActivity">
    <include layout="@layout/pubic_title_bar"/>
    <include layout="@layout/line"/>
    <com.kemizhibo.kemizhibo.yhr.utils.videoUtils.DefinitionIjkVideoView
        android:layout_alignParentTop="true"
        android:id="@+id/player"
        android:layout_width="match_parent"
        android:layout_height="@dimen/res_271dp" >
        <ImageView
            android:id="@+id/video_back_butn"
            android:layout_marginTop="@dimen/res_20dp"
            android:layout_marginLeft="@dimen/res_20dp"
            android:layout_width="@dimen/res_20dp"
            android:layout_height="@dimen/res_20dp"
            android:src="@mipmap/fanhui"/>
    </com.kemizhibo.kemizhibo.yhr.utils.videoUtils.DefinitionIjkVideoView>
    <LinearLayout
        android:layout_marginTop="@dimen/res_17.5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/lecture_title"
            android:layout_marginLeft="@dimen/res_12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="素材标题"/>
        <Button
            android:id="@+id/finish_lecture"
            android:layout_marginRight="@dimen/res_10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/res_textsize_12sp"
            android:background="@mipmap/wanchengshouke"
            android:text="完成授课"/>
    </LinearLayout>
</LinearLayout>
