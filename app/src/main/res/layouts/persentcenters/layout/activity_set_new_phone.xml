<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kemizhibo.kemizhibo.yhr.activity.personcenters.SetNewPhoneActivity">
    <include layout="@layout/pubic_title_bar"/>
    <include layout="@layout/line"/>
    <ImageView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/res_27.5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/shezhinewphone_2"/>
    <LinearLayout
        android:layout_marginTop="@dimen/res_87dp"
        android:layout_width="@dimen/res_362.5dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/shouji_2"/>
        <EditText
            android:id="@+id/put_phone_num"
            android:theme="@style/MyEditText"
            android:inputType="number"
            android:layout_marginLeft="@dimen/res_10dp"
            android:layout_width="@dimen/res_336.5dp"
            android:layout_height="wrap_content"
            android:hint="请输入手机号"/>
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/res_28dp"
        android:layout_width="@dimen/res_362.5dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/yanzhengma_2"/>
        <EditText
            android:singleLine="true"
            android:id="@+id/put_yanzhengma"
            android:maxLength="4"
            android:theme="@style/MyEditText"
            android:inputType="number"
            android:layout_marginLeft="@dimen/res_10dp"
            android:layout_width="@dimen/res_137dp"
            android:layout_height="wrap_content"
            android:hint="请输入验证码"/>
        <Button
            android:id="@+id/get_yanzhengma"
            android:layout_width="@dimen/res_120dp"
            android:layout_height="@dimen/res_25dp"
            android:text="获取验证码"
            android:textColor="#ffffff"
            android:background="@mipmap/login_butn"/>
        <View
            android:layout_width="@dimen/res_80dp"
            android:layout_height="@dimen/res_20dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/commit_butn"
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/res_362.5dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="94.5dp"
        android:background="@mipmap/login_butn"
        android:textColor="@color/white"
        android:text="提交"/>
</LinearLayout>
