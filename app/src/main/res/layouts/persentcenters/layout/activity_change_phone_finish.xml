<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/pubic_title_bar"/>
    <include layout="@layout/line"/>
    <ImageView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/res_27.5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/wancheng_2"/>
    <ImageView
        android:layout_marginTop="@dimen/res_100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/milier"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/res_14dp"
        android:textSize="@dimen/res_textsize_18sp"
        android:textColor="#7f7e7e"
        android:text="恭喜您！"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/res_14dp"
        android:textSize="@dimen/res_textsize_18sp"
        android:textColor="#7f7e7e"
        android:text="修改手机号码成功"/>
    <TextView
        android:id="@+id/daojishi"
        android:layout_marginTop="@dimen/res_38dp"
        android:textColor="#caccca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/res_textsize_11sp"
        android:text="3秒后请重新登录"/>

</LinearLayout>
