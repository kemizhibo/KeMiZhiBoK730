<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kemizhibo.kemizhibo.yhr.activity.personcenters.PersonCenterShouCangActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/pubic_title_bar"/>
        <include layout="@layout/line"/>
        <FrameLayout
            android:id="@+id/shoucang_frame_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">
        </FrameLayout>
        <com.liaoinstan.springview.widget.SpringView
            android:layout_marginTop="@dimen/res_17.5dp"
            android:layout_below="@+id/search_view_box"
            android:id="@+id/collection_box_springview"
            android:layout_marginLeft="@dimen/res_10dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/collection_box_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>
        </com.liaoinstan.springview.widget.SpringView>
        <FrameLayout
            android:id="@+id/frame_layout_shoucang"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/res_50dp">
                <Button
                    android:id="@+id/select_all_butn"
                    android:background="@color/text_67c58c"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/res_textsize_15sp"
                    android:text="全选"/>
                <Button
                    android:id="@+id/delete_butn"
                    android:background="@color/white"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/text_bbbbbb"
                    android:textSize="@dimen/res_textsize_15sp"
                    android:text="删除"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/bianji_relativelayout"
        android:layout_marginRight="@dimen/res_15dp"
        android:layout_marginTop="@dimen/res_20dp"
        android:onClick="onClick"
        android:clickable="true"
        android:layout_alignParentRight="true"
        android:layout_width="@dimen/res_40dp"
        android:layout_height="@dimen/res_40dp">
        <ImageView
            android:layout_centerInParent="true"
            android:id="@+id/bianji_img"
            android:layout_width="@dimen/res_20dp"
            android:layout_height="@dimen/res_20dp"
            android:src="@drawable/pan"/>
    </RelativeLayout>
</RelativeLayout>
