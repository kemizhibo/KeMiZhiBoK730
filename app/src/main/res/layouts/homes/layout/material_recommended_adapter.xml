<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <LinearLayout
        android:layout_marginTop="@dimen/res_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="@dimen/res_287.5dp"
            android:layout_height="@dimen/res_160dp">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/material_recommended_imageview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                fresco:roundedCornerRadius="@dimen/x10"
                fresco:placeholderImage="@mipmap/milier"
                fresco:failureImage="@mipmap/milier"/>
            <ImageView
                android:id="@+id/collection_box_play_butn"
                android:layout_centerInParent="true"
                android:layout_width="@dimen/res_18dp"
                android:layout_height="@dimen/res_18dp"
                android:visibility="gone"
                android:src="@mipmap/play_butn"/>
            <ImageView
                android:id="@+id/collection_box_tuji"
                android:layout_width="@dimen/res_18dp"
                android:layout_height="@dimen/res_15dp"
                android:layout_marginRight="@dimen/res_5dp"
                android:layout_marginBottom="@dimen/res_5dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                android:src="@mipmap/tuji"/>
        </RelativeLayout>

        <TextView
            android:layout_marginLeft="@dimen/res_12dp"
            android:id="@+id/material_recommended_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中国的猫头鹰种类"
            android:textColor="@color/text_333333"
            android:textStyle="bold"
            android:textSize="@dimen/res_textsize_15sp"/>
    </LinearLayout>

</RelativeLayout>
