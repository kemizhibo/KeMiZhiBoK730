<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <LinearLayout
        android:layout_marginTop="@dimen/res_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/training_course_recommendation_imageview"
            android:layout_width="@dimen/res_287.5dp"
            android:layout_height="@dimen/res_160dp"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_marginLeft="@dimen/res_12dp"
            android:id="@+id/training_course_recommendation_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中国的猫头鹰种类"
            android:textColor="@color/text_333333"
            android:textStyle="bold"
            android:textSize="@dimen/res_textsize_15sp"/>
    </LinearLayout>

</RelativeLayout>
