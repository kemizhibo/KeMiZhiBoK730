<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kemizhibo.kemizhibo.yhr.activity.personcenters.PersonCenterBianJiActivity">
    <include layout="@layout/pubic_title_bar"/>
    <include layout="@layout/line"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/res_48.5dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_marginLeft="@dimen/res_42.5dp"
            android:layout_width="@dimen/res_60dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/res_textsize_13sp"
                android:textColor="@color/text_4e4e4e"
                android:text="学校名称"/>
        </RelativeLayout>
        <EditText
            android:id="@+id/person_school_name_edittext"
            android:background="@null"
            android:layout_marginLeft="@dimen/res_77dp"
            android:textSize="@dimen/res_textsize_12sp"
            android:theme="@style/MyEditText2"
            android:textColor="@color/black_dbdbdb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <include layout="@layout/line"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/res_48.5dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_marginLeft="@dimen/res_42.5dp"
            android:layout_width="@dimen/res_60dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/res_textsize_13sp"
                android:textColor="@color/text_4e4e4e"
                android:text="联系人    "/>
        </RelativeLayout>

        <EditText
            android:id="@+id/person_lianxiren_edittext"
            android:background="@null"
            android:theme="@style/MyEditText2"
            android:layout_marginLeft="@dimen/res_77dp"
            android:textSize="@dimen/res_textsize_12sp"
            android:textColor="@color/black_dbdbdb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <include layout="@layout/line"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/res_48.5dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_marginLeft="@dimen/res_42.5dp"
            android:layout_width="@dimen/res_60dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/res_textsize_13sp"
                android:textColor="@color/text_4e4e4e"
                android:text="学科        "/>
        </RelativeLayout>

        <EditText
            android:id="@+id/person_type_edittext"
            android:background="@null"
            android:theme="@style/MyEditText2"
            android:layout_marginLeft="@dimen/res_77dp"
            android:textSize="@dimen/res_textsize_12sp"
            android:textColor="@color/black_dbdbdb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <include layout="@layout/line"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/res_48.5dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_marginLeft="@dimen/res_42.5dp"
            android:layout_width="@dimen/res_60dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/res_textsize_13sp"
                android:textColor="@color/text_4e4e4e"
                android:text="年级        "/>
        </RelativeLayout>

        <EditText
            android:id="@+id/person_gradle_edittext"
            android:background="@null"
            android:theme="@style/MyEditText2"
            android:layout_marginLeft="@dimen/res_77dp"
            android:textSize="@dimen/res_textsize_12sp"
            android:textColor="@color/black_dbdbdb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <include layout="@layout/line"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/res_48.5dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_marginLeft="@dimen/res_42.5dp"
            android:layout_width="@dimen/res_60dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/res_textsize_13sp"
                android:textColor="@color/text_4e4e4e"
                android:text="地址"/>
        </RelativeLayout>
        <EditText
            android:id="@+id/person_address_edittext"
            android:background="@null"
            android:theme="@style/MyEditText2"
            android:layout_marginLeft="@dimen/res_77dp"
            android:textSize="@dimen/res_textsize_12sp"
            android:textColor="@color/black_dbdbdb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <include layout="@layout/line"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/res_48.5dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_marginLeft="@dimen/res_42.5dp"
            android:layout_width="@dimen/res_60dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/res_textsize_13sp"
                android:textColor="@color/text_4e4e4e"
                android:text="身份证号"/>
        </RelativeLayout>
        <EditText
            android:id="@+id/person_idcard_edittext"
            android:background="@null"
            android:theme="@style/MyEditText2"
            android:layout_marginLeft="@dimen/res_77dp"
            android:textSize="@dimen/res_textsize_12sp"
            android:textColor="@color/black_dbdbdb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <include layout="@layout/line"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/res_48.5dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_marginLeft="@dimen/res_42.5dp"
            android:layout_width="@dimen/res_60dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/res_textsize_13sp"
                android:textColor="@color/text_4e4e4e"
                android:text="邮箱        "/>
        </RelativeLayout>

        <EditText
            android:id="@+id/person_email_edittext"
            android:background="@null"
            android:theme="@style/MyEditText2"
            android:layout_marginLeft="@dimen/res_77dp"
            android:textSize="@dimen/res_textsize_12sp"
            android:textColor="@color/black_dbdbdb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <include layout="@layout/line"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/res_48.5dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_marginLeft="@dimen/res_42.5dp"
            android:layout_width="@dimen/res_60dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/res_textsize_13sp"
                android:textColor="@color/text_4e4e4e"
                android:text="手机号码"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/person_phone_edittext"
            android:layout_marginLeft="@dimen/res_77dp"
            android:textSize="@dimen/res_textsize_12sp"
            android:textColor="@color/black_dbdbdb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/person_change_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/res_42.5dp"
            android:text="更换手机号码"/>
    </LinearLayout>
    <include layout="@layout/line"/>
    <Button
        android:id="@+id/finish_butn"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/res_109dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/login_butn"
        android:textColor="@color/white"
        android:textSize="@dimen/res_textsize_20sp"
        android:text="完成"/>
</LinearLayout>
