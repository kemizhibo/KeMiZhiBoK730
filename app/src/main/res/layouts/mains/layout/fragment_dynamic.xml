<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/toolbar_dynamic"/>
    <include layout="@layout/line"/>
    <android.support.design.widget.TabLayout
            android:background="@color/white"
            android:id="@+id/dynamic_Tab"
            app:tabTextColor="@color/text_7f7e7e"
            style="@style/TabLayoutTextSizeStyle"
            app:tabIndicatorColor="@color/green_tab"
            app:tabSelectedTextColor="@color/green_tab"
            android:layout_width="match_parent"
            app:tabMode="fixed"
        android:layout_marginLeft="@dimen/res_50dp"
        android:layout_marginRight="@dimen/res_50dp"
            android:layout_height="@dimen/res_48dp">
    </android.support.design.widget.TabLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/line_f1f1f1"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/dynamic_Vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>

</LinearLayout>

