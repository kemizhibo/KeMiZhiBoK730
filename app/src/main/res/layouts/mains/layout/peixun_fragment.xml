<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.liaoinstan.springview.widget.SpringView
        android:layout_marginTop="@dimen/res_63dp"
        android:layout_marginLeft="@dimen/res_10dp"
        android:id="@+id/teacher_trainingg_spring"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/teacher_training_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical" />
    </com.liaoinstan.springview.widget.SpringView>
    <com.kemizhibo.kemizhibo.yhr.utils.DropDownMenuView
        android:orientation="vertical"
        android:id="@+id/teacher_training_xiala_dropDownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:duration="300">
        <!-- 第一个布局是顶部layout -->
        <LinearLayout
            android:id="@+id/teacher_training_shaixuan_butn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/res_40dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/res_22.5dp"
                    android:text="筛选"
                    android:textColor="@color/text_7f7e7e"
                    android:textSize="@dimen/res_textsize_12sp" />
                <ImageView
                    android:id="@+id/teacher_training_xiala_imageview"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/res_10dp"
                    android:src="@mipmap/xiala_2" />
            </RelativeLayout>
        </LinearLayout>

        <!-- 第二个布局是筛选条件的layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/teacher_training_shaixuan_butn">
            <LinearLayout
                android:layout_marginTop="@dimen/res_10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="@dimen/res_25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_999999"
                    android:textSize="@dimen/text_size_12sp"
                    android:text="教材:"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/teacher_training_shaixuan_jiaocai_recyclerview"
                    android:layout_marginLeft="@dimen/res_25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </android.support.v7.widget.RecyclerView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/res_17.5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="@dimen/res_25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_999999"
                    android:textSize="@dimen/text_size_12sp"
                    android:text="年级:"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/teacher_training_shaixuan_nianji_recyclerview"
                    android:layout_marginLeft="@dimen/res_25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </android.support.v7.widget.RecyclerView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/res_17.5dp"
                android:layout_marginBottom="@dimen/res_17.5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="@dimen/res_25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_999999"
                    android:textSize="@dimen/text_size_12sp"
                    android:text="学期:"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/teacher_training_shaixuan_xueqi_recyclerview"
                    android:layout_marginLeft="@dimen/res_25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </LinearLayout>
    </com.kemizhibo.kemizhibo.yhr.utils.DropDownMenuView>
</FrameLayout>
