<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.youth.banner.Banner
        android:id="@+id/home_banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/res_300dp">
    </com.youth.banner.Banner>
    <com.androidkun.xtablayout.XTabLayout
        android:layout_below="@+id/home_banner"
        android:padding="@dimen/res_10dp"
        app:xTabIndicatorWidth="@dimen/res_20dp"
        app:xTabIndicatorHeight="@dimen/res_3dp"

        app:xTabIndicatorColor="@color/green_tab"
        app:xTabSelectedTextColor="@color/text_333333"
        app:xTabTextColor="@color/text_333333"
        app:xTabTextSize="@dimen/res_textsize_15sp"
        app:xTabDisplayNum="4"
        app:xTabSelectedTextSize="@dimen/res_textsize_17.5sp"
        app:xTabDividerColor="@color/text_333333"
        app:xTabTextSelectedBold="true"
        android:id="@+id/home_tablayout"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/res_65dp">
    </com.androidkun.xtablayout.XTabLayout>
    <android.support.v4.view.ViewPager
        android:layout_below="@+id/home_tablayout"
        android:layout_marginLeft="@dimen/res_10dp"
        android:id="@+id/home_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v4.view.ViewPager>
</RelativeLayout>
