<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".yhr.activity.logins.LoginActivity">
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
        android:layout_marginTop="150dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/logo_2x"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:textColor="#67C58A"
        android:text="- 科学课辅助教学平台 -"/>
    <LinearLayout
        android:layout_marginTop="98dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/login_user"/>
        <EditText
            android:singleLine="true"
            android:id="@+id/login_name"
            android:theme="@style/MyEditText"
            android:layout_marginLeft="30dp"
            android:layout_width="337dp"
            android:layout_height="wrap_content"
            android:hint="请输入您的账号/手机号码"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="44dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/login_pwd"/>
        <EditText
            android:inputType="textPassword"
            android:singleLine="true"
            android:id="@+id/login_pwd"
            android:theme="@style/MyEditText"
            android:layout_marginLeft="30dp"
            android:layout_width="337dp"
            android:layout_height="wrap_content"
            android:hint="请输入您的密码"/>
    </LinearLayout>
    <TextView
        android:id="@+id/login_wangji"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="14dp"
        android:textColor="#AEAEAE"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码？"/>
    <Button
        android:id="@+id/login_butn"
        android:layout_marginTop="87dp"
        android:background="@mipmap/login_butn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:text="登录"/>
    </LinearLayout>
</ScrollView>
