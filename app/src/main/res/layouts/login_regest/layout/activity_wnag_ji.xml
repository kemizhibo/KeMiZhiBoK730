<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".yhr.activity.logins.WangJiActivity">
    <include layout="@layout/pubic_title_bar"/>
    <include layout="@layout/line"/>
    <View
        android:background="#dcdcdc"
        android:layout_width="match_parent"
        android:layout_height="@dimen/res_1dp" />
    <ImageView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/res_27.5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/yanzheng_2"/>
    <LinearLayout
        android:layout_marginTop="@dimen/res_87dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/shouji_2"/>
        <EditText
            android:singleLine="true"
            android:id="@+id/phone_number"
            android:theme="@style/MyEditText"
            android:layout_marginLeft="@dimen/res_30dp"
            android:layout_width="@dimen/res_337dp"
            android:layout_height="wrap_content"
            android:hint="请输入手机号"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/res_44dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/yanzhengma_2"/>
        <EditText
            android:singleLine="true"
            android:id="@+id/yanzhengma"
            android:maxLength="4"
            android:theme="@style/MyEditText"
            android:layout_marginLeft="@dimen/res_30dp"
            android:layout_width="@dimen/res_137dp"
            android:layout_height="wrap_content"
            android:hint="请输入验证码"/>
        <!--<Button
            android:id="@+id/huoqv_yanzhengma"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:background="@mipmap/login_butn"
            android:textColor="#ffffff"
            android:text="获取验证码"/>-->
        <Button
            android:id="@+id/huoqv_yanzhengma"
            android:layout_width="@dimen/res_120dp"
            android:layout_height="@dimen/res_25dp"
            android:text="获取验证码"
            android:textColor="#ffffff"
            android:background="@mipmap/login_butn"/>
       <View
           android:layout_width="@dimen/res_80dp"
           android:layout_height="@dimen/res_20dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/next"
        android:layout_marginTop="@dimen/res_157dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/login_butn"
        android:textColor="#ffffff"
        android:text="下一步"/>

    <TextView
        android:layout_marginTop="@dimen/res_30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="客服电话:010-80456778/010-80456803"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_12sp"/>

</LinearLayout>
