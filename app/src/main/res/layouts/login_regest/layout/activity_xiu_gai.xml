<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".yhr.activity.logins.XiuGaiActivity">
    <include layout="@layout/pubic_title_bar"/>
    <include layout="@layout/line"/>
    <ImageView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/res_27.5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/xiugaimima_2"/>
    <LinearLayout
        android:layout_marginTop="@dimen/res_87dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/login_pwd"/>
        <EditText
            android:singleLine="true"
            android:inputType="textPassword"
            android:id="@+id/xiugai_pwd"
            android:theme="@style/MyEditText"
            android:layout_marginLeft="@dimen/res_30dp"
            android:layout_width="@dimen/res_337dp"
            android:layout_height="wrap_content"
            android:hint="请输入密码"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/res_44dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/xiugaimima_suo_2"/>
        <EditText
            android:singleLine="true"
            android:inputType="textPassword"
            android:id="@+id/queren_pwd"
            android:theme="@style/MyEditText"
            android:layout_marginLeft="@dimen/res_30dp"
            android:layout_width="@dimen/res_337dp"
            android:layout_height="wrap_content"
            android:hint="请再次输入密码"/>
    </LinearLayout>
    <Button
        android:id="@+id/finish_next"
        android:layout_marginTop="@dimen/res_157dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/login_butn"
        android:textColor="#ffffff"
        android:text="完成"/>
</LinearLayout>


