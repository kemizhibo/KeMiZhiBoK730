<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".yhr.activity.logins.XiuGaiActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/xiugai_back"
            android:layout_margin="@dimen/res_12dp"
            android:src="@mipmap/fanhui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="找回密码"
            android:textColor="#7f7e7e"
            android:textSize="@dimen/res_textsize_18sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="#dcdcdc"
        android:layout_width="match_parent"
        android:layout_height="@dimen/res_1dp" />
    <ImageView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/res_27.5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/xiugaimima_2"/>
    <LinearLayout
        android:layout_marginTop="@dimen/res_87dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/loginedittext"/>
        <EditText
            android:singleLine="true"
            android:id="@+id/xiugai_pwd"
            android:theme="@style/MyEditText"
            android:layout_marginLeft="@dimen/res_30dp"
            android:layout_width="@dimen/res_337dp"
            android:layout_height="wrap_content"
            android:hint="请输入密码"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/res_44dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/xiugaimima_suo_2"/>
        <EditText
            android:singleLine="true"
            android:id="@+id/queren_pwd"
            android:theme="@style/MyEditText"
            android:layout_marginLeft="@dimen/res_30dp"
            android:layout_width="@dimen/res_337dp"
            android:layout_height="wrap_content"
            android:hint="请再次输入密码"/>
    </LinearLayout>
    <Button
        android:id="@+id/finish_next"
        android:layout_marginTop="@dimen/res_157dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/login_butn"
        android:textColor="#ffffff"
        android:text="完成"/>
</LinearLayout>


