<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <include layout="@layout/line"/>
    <RadioGroup
        android:paddingLeft="@dimen/res_23dp"
        android:paddingRight="@dimen/res_23dp"
        android:id="@+id/rg_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/res_50dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <RadioButton
            android:id="@+id/rb_1"
            style="@style/DynamicTop"
            android:text="全部"
            android:checked="true"
            android:background="@drawable/dynamic_selecter"
            />

        <RadioButton
            android:id="@+id/rb_2"
            style="@style/DynamicTop"
            android:text="经验分享"
            android:layout_marginLeft="@dimen/res_20dp"
            android:layout_marginRight="@dimen/res_20dp"
            android:background="@drawable/dynamic_selecter"
            />

        <RadioButton
            android:id="@+id/rb_3"
            style="@style/DynamicTop"
            android:text="实验攻略"
            android:background="@drawable/dynamic_selecter"
            />

        <RadioButton
            android:layout_marginLeft="@dimen/res_20dp"
            android:id="@+id/rb_4"
            style="@style/DynamicTop"
            android:text="熊孩子"
            android:background="@drawable/dynamic_selecter"
            />


        <RadioButton
            android:id="@+id/rb_5"
            style="@style/DynamicTop"
            android:text="教材解读"
            android:layout_marginLeft="@dimen/res_20dp"
            android:layout_marginRight="@dimen/res_20dp"
            android:background="@drawable/dynamic_selecter"
            />

        <RadioButton
            android:id="@+id/rb_6"
            style="@style/DynamicTop"
            android:text="其他"
            android:background="@drawable/dynamic_selecter"
            />

    </RadioGroup>

</LinearLayout>