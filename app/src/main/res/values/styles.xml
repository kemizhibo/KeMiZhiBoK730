<resources>
    <!-- 首页底部按钮 -->
    <style name="MainButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:paddingTop">@dimen/res_8dp</item>
        <item name="android:paddingBottom">@dimen/res_8dp</item>
        <item name="android:gravity">center</item>
    </style>
    <!--tab字体大小-->
    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/res_textsize_14sp</item>
    </style>


    <!--视频标题的字体大小-->
    <style name="ZheDieVideoTitle">
        <item name="android:textSize">@dimen/res_textsize_15sp</item>
        <item name="android:textColor">@color/green_tab</item>
    </style>
    <style name="OpenVideoTitle">
        <item name="android:textSize">@dimen/res_textsize_18sp</item>
        <item name="android:textColor">@color/huise_tab</item>
    </style>

    <style name="DynamicTop">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/text_dddddd</item>
        <item name="android:textSize">@dimen/res_textsize_13sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/res_5dp</item>
        <item name="android:paddingBottom">@dimen/res_5dp</item>
    </style>

    <!--LoadingPage加载错误-->
    <style name="nodata_bluebuttonbottom">
        <item name="android:textSize">@dimen/res_textsize_15sp</item>
        <item name="android:textColor">@color/blue_text_007dff</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/white</item>
    </style>
    <!--权重布局-->
    <style name="WeightStyle" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!--权重布局-->
    <style name="WeightHeightStyle" >
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!--MM布局-->
    <style name="MMStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="MWStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="WMStyle" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="WWStyle" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="TopPopAnim" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/top_in</item>
        <item name="android:windowExitAnimation">@anim/top_out</item>
    </style>


    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/huise_tab</item>
        <item name="colorControlActivated">@color/green_tab</item>
    </style>

    <style name="TabLayoutTextSizeStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">@dimen/res_textsize_14sp</item>
    </style>

    <style name="mypopwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/popshow_anim</item>
        <!-- 指定显示的动画xml -->

        <item name="android:windowExitAnimation">@anim/pophidden_anim</item>
        <!-- 指定消失的动画xml -->
    </style>

    <!-- 透明弹窗提示 -->
    <style name="Transparent" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@drawable/transparent_bg</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>
