<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:id="@+id/lecture_frameLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/res_1dp"
            android:background="@color/white"/>
        <RadioGroup
            android:id="@+id/lecture_rg_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/res_56dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/lecture_rb_dynamic"
                style="@style/MainButtonStyle"
                android:drawableTop="@drawable/main_homepage_selecter"
                />

            <RadioButton
                android:id="@+id/lecture_rb_QAndA"
                style="@style/MainButtonStyle"
                android:drawableTop="@drawable/main_forteaching_selecter"
                />
            <RadioButton
                android:id="@+id/lecture_rb_message"
                style="@style/MainButtonStyle"
                android:drawableTop="@drawable/main_lecture_selecter"
                />
            <RadioButton
                android:id="@+id/lecture_rb_mine"
                style="@style/MainButtonStyle"
                android:drawableTop="@drawable/main_resourcelibrary_selecter"
                />

        </RadioGroup>
    </LinearLayout>
</RelativeLayout>
